
extends layout

block content
  .container.mt-5.mb-4
    h2.text-center Add User

    form(action='/add', method='POST')
      .form-group
        label(for='firstName') First Name:
        input(type='text', name='firstName', class='form-control', required)

      .form-group
        label(for='lastName') Last Name:
        input(type='text', name='lastName', class='form-control', required)

      .form-group
        label(for='dob') Date of Birth:
        input(type='date', name='dob', class='form-control', required)

      .form-group
        label(for='address1') Address 1:
        input(type='text', name='address1', class='form-control', required)

      .form-group
        label(for='address2') Address 2:
        input(type='text', name='address2', class='form-control')

      .form-group
        label(for='city') City:
        input(type='text', name='city', class='form-control', required)

      .form-group
        label(for='postalCode') Postal Code:
        input(type='text', name='postalCode', class='form-control', required)

      .form-group
        label(for='country') Country:
        input(type='text', name='country', class='form-control', required)

      .form-group
        label(for='phoneNumber') Phone Number:
        input(type='tel', name='phoneNumber', class='form-control', required)

      .form-group
        label(for='email') Email:
        input(type='email', name='email', class='form-control', required)

      .form-group
        label(for='userNotes') User Notes:
        textarea(name='userNotes', class='form-control', rows='4')

      button.btn.btn-primary(type='submit') Add User
